<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>${project.build.format}</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <outputDirectory>\lib</outputDirectory>
            <excludes>
                <exclude>${project.groupId}:module_head:*</exclude>
                <exclude>${project.groupId}:module_data:*</exclude>
            </excludes>
            <unpack>false</unpack>
            <includes/>
        </dependencySet>
    </dependencySets>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>${project.groupId}:module_head:*</include>
                <include>${project.groupId}:module_data:*</include>
            </includes>
            <excludes>
                <exclude>${project.groupId}:assembly:*</exclude>
            </excludes>
            <binaries>
                <outputDirectory>\</outputDirectory>
                <unpack>false</unpack>
                <includeDependencies>false</includeDependencies>
            </binaries>
        </moduleSet>
    </moduleSets>
    <fileSets>
        <!--<fileSet>
            <includes>
                <include>\WEB-INF\**</include>
            </includes>
        </fileSet>-->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <includes>
                <include>\classes\**</include>
            </includes>
            <excludes>
                <exclude>*.ear</exclude>
            </excludes>
            <outputDirectory>\WEB-INF</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>\META-INF</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>\META-INF</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
